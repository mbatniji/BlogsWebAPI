@{
    ViewData["Title"] = "Index";
}

<link href="~/css/Blog.css" rel="stylesheet" />
<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-user"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                Blogs
            </h3>
        </div>

    </div>
    <div class="kt-portlet__body">
        <!--begin: Datatable -->
        <table id="BlogsItemsTable" class="table table-striped- table-bordered table-hover">
            <thead class="thin-border-bottom">
                <tr>

                    <th>Id</th>
                    <th>Author Email</th>
                    <th>Title</th>
                    <th>Create Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
        <!--end: Datatable -->
    </div>
</div>


@section Scripts {
   
    <script>

        "use strict";
        var KTDatatablesDataSourceAjaxServer = function () {

            var initTable1 = function () {
                var table = $('#BlogsItemsTable');
                table.DataTable({
                    responsive: true,
                    searchDelay: 500,
                    processing: true,
                    serverSide: true,
                    ajax: {
                        url: "/Home/Blogs",
                        method: "POST"
                    },
                    columns: [

                        { data: 'id' },
                        { data: 'authorMame' },
                        { data: 'title' },
                        { data: 'createDate', responsivePriority: -2 },
                        { data: 'Actions', responsivePriority: -1 }
                    ],
                    columnDefs: [
                        {
                            targets: -1,
                            orderable: false,
                            render: function (data, type, full, meta) {
                               return '<a class="btn btn-sm btn-primary" href="/Home/BlogDetails/'+full.id+'"><i class="fa fa-info-circle"></i> Details</a>';
                            },
                        },
                        {
                            targets: -2,
                            orderable: false,
                            render: function (data, type, full, meta) {
                                return '<label class="kt-checkbox"> ' + formatDate(full.createDate) + (IsGreater(full.createDate) ? " <span class='auto-close pulse'>New</span>" : "") + '</label>';
                            },
                        }

                    ]
                });
                // begin first table

            };

            return {
                //main function to initiate the module
                init: function () {
                    initTable1();
                },
            };
        }();

        KTDatatablesDataSourceAjaxServer.init();

        setTimeout(function () {
            $('.auto-close').fadeOut('slow');
        }, 30000);

        function IsGreater(dateEntered) {
            var dateToCompare = Date.parse(dateEntered);
            var currentDate = new Date();

            if (dateToCompare > currentDate.setMinutes(-5)) {
                return true;
            }
            else {
                return false;
            }
        }
        function formatDate(date) {
            var d = new Date(date),
                month = '' + (d.getMonth() + 1),
                day = '' + d.getDate(),
                year = d.getFullYear();

            if (month.length < 2)
                month = '0' + month;
            if (day.length < 2)
                day = '0' + day;

            return [year, month, day].join('-');
        }
    </script>
}